---
import { getCollection } from "astro:content";
import Container from "@components/Container.astro";
import PageLayout from "@layouts/PageLayout.astro";
import ArrowCard from "@components/ArrowCard.astro";
import Link from "@components/Link.astro";
import { dateRange } from "@lib/utils";
import { SITE, HOME, SOCIALS } from "@consts";

const blog = (await getCollection("blog"))
  .filter(post => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_POSTS_ON_HOMEPAGE);

const projects = (await getCollection("projects"))
  .filter(project => !project.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf())
  .slice(0,SITE.NUM_PROJECTS_ON_HOMEPAGE);

const allwork = (await getCollection("work"))
  .sort((a, b) => new Date(b.data.dateStart).valueOf() - new Date(a.data.dateStart).valueOf())
  .slice(0,SITE.NUM_WORKS_ON_HOMEPAGE);

const work = await Promise.all(
  allwork.map(async (item) => {
    const { Content } = await item.render();
    return { ...item, Content };
  })
);

---

<PageLayout title={HOME.TITLE} description={HOME.DESCRIPTION}>
  <Container>
    <h1 class="animate">
      Hi, I'm Cassi!
    </h1>
    <div class="space-y-16">
      <section>
        <article class="space-y-4">
          <p class="animate">
            I'm a design-forward Frontend Developer specializing in building web, marketing, and UX experiences. 
          </p>
        </article>
        <ul class="flex flex-wrap gap-2">
          {SOCIALS.map(SOCIAL => (
            <li class="flex gap-x-2 text-nowrap">
              <Link href={SOCIAL.HREF} external aria-label={`${SITE.NAME} on ${SOCIAL.NAME}`}>
                {SOCIAL.NAME}
              </Link>
              {"/"}
            </li>
          ))}
          <li class="line-clamp-1">
            <Link href={`mailto:${SITE.EMAIL}`} aria-label={`Email ${SITE.NAME}`}>
              {SITE.EMAIL}
            </Link>
          </li>
        </ul>
      </section>
      <section class="animate space-y-6" id="about-section">
        <div class="flex flex-wrap gap-y-2 items-center justify-between">
          <h2>
            About
          </h2>
          <article class="space-y-4">
          <p class="animate">
           I've worn many hats in my career. From design work, to customer service, to marketing teams - I'm a frontend developer that understands the needs to a variety of team members. 
          </p>
          <p class="animate">
          Need great UX and UI experiences? I bring a strong design sensibility to Frontend development, which means seamless collaboration with designers and faithful translation of wireframes into polished, production-ready interfaces. I enjoy working within and building design systems that keep code scalable, consistent, and easy to reuse.
          </p>
          <p class="animate">
            Working on a marketing team? I’ve spent 5+ years on the technical side of marketing, so I understand the importance of performance, SEO, information architecture, and effective landing page layouts. I’m comfortable collaborating cross-functionally and bridging the gap between technical and non-technical teammates.
          </p>
          <p class="animate">I’m also editor-friendly. With a strong background in CMS platforms, I design with the end user in mind—whether that’s a content marketer publishing a blog post or a demand gen specialist building a landing page. I create flexible, intuitive editor experiences that help teams move quickly and confidently.
</p>
        </article>
      </section>
