---
import { cn } from "@lib/utils";

type Props = {
  href: string;
  external?: boolean;
  underline?: boolean;
}

const { href, external, underline = true, ...rest } = Astro.props;
---

<a 
  href={href} 
  target={ external ? "_blank" : "_self" } 
  class={cn("font-mono inline-block decoration-indigo-600/15 dark:decoration-rose-500/30 hover:decoration-indigo-900/50 hover:dark:decoration-rose-900/50 text-indigo-600 dark:text-rose-500 hover:text-indigo-900 hover:dark:text-rose-900 transition-colors duration-300 ease-in-out", underline && "underline underline-offset-2")}
  {...rest}>
  <slot/>
</a>
